<style>
  section.intro {
    max-width: var(--container);
    height: 100%;
    margin: 0 auto;
    padding: 1.5rem 1.5rem;
    box-sizing: border-box;

    display: flex;
    position: relative;
    flex-direction: column;
  }

  section.intro .subhead {
    margin: 0;
    margin-left: 0.25rem;
  }

  .socials {
    margin-top: 1.25rem;
    display: flex;
    align-items: center;
  }

  .socials > * {
    margin-right: 1.75rem;
  }

  .image {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    position: absolute;
    right: 1rem;
    bottom: 0;
  }

  @media screen and (min-width: 320px) {
    header h1 {
      font-size: 3.25rem;
    }
  }

  .image img {
    border-radius: 100%;
    box-shadow: 0px 4px 13px 14px rgba(255, 118, 94, 0.05);
    max-width: 45vw;
    transition: 150ms ease-in-out box-shadow;
    animation: 0.8s ease-in-out 0s 1 normal forwards running
      header-image-fade-in-up;
  }

  .image img:hover {
    box-shadow: 0px 4px 13px 14px rgba(255, 118, 94, 0.15);
  }

  h1 {
    margin: 0;
    font-size: 2.25rem;
    mix-blend-mode: overlay;
  }
</style>
